{
  "name": "fe-lint-yan",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "build:docs": "pnpm --filter docs build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "lint:md": "markdownlint '**/*.md' --ignore node_modules --ignore .next --ignore dist",
    "lint:md:fix": "markdownlint '**/*.md' --ignore node_modules --ignore .next --ignore dist --fix"
  },
  "simple-git-hooks": {
    "commit-msg": "npx commitlint --edit $1"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "markdownlint": "^0.29.0",
    "markdownlint-cli": "^0.38.0",
    "prettier": "^3.6.2",
    "turbo": "^2.5.8",
    "typescript": "5.9.2",
    "commitlint-config-yan": "workspace:*",
    "markdownlint-config-yan": "workspace:*"
  },
  "packageManager": "pnpm@10.18.3",
  "engines": {
    "node": ">=20"
  }
}